<%- include('partials/_header') -%>
<body style="background-color: #141414">
  <!-- NAV -->
  <%- include('partials/_navigation') -%>

  <!-- CONTAINER -->

  <div class="container">
    <div id="fh5co-projects-feed" class="fh5co-projects-feed clearfix masonry">
      <% for(let i = 0; i < diaries.length; i++) { %>
      <div class="fh5co-project masonry-brick">
        <a href="/diaries/<%= diaries[i]._id %>">
          <img class="img-fluid img-thumbnail" src="<%= diaries[i].image %>" alt="<%= diaries[i].title %>">
        </a>
        <span> <%= diaries[i].createdAt.toLocaleDateString() %> </span>
      </div>
      <% } %>
    </div>
    <div>
      <% if(diaries.length>0) { %>
      <ul class="pagination">
        <% for(let i=1; i <= pages; i++) { %>
          <% if(i == current) { %>
            <li class="page-item active">
              <a class="page-link " href="/?page=<%= i %>">
                <%= i %>
              </a>
            </li>
            <% } else if(i < pages) { %>
              <li class="page-item">
                <a class="page-link" href="/?page=<%= i %>">
                  <%= i %>
                </a>
              </li>
            <% } else { %>
              <li class="page-item">
                <a class="page-link" href="/?page=<%= i %>">
                  <%= pages %>
                </a>
              </li>
            <% } %>
        <% } %>
      </ul>
      <% } %>
    </div>
  </div>
  

  <!-- FOOTER -->
  <%- include('partials/_footer') -%>
</body>
</html>